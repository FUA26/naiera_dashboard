{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "app/**/*.{ts,tsx}",
    "app/[locale]/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}",
    "src/middleware.ts"
  ],
  "project": ["**/*.{ts,tsx}"],
  "ignore": [
    "**/*.config.{js,ts,mjs}",
    "**/*.d.ts",
    ".next/**",
    "node_modules/**",
    ".storybook/**",
    "stories/**",
    "**/*.stories.{ts,tsx}"
  ],
  "ignoreDependencies": [
    "@types/*",
    "tw-animate-css",
    "class-variance-authority",
    "lucide-react",
    "eslint-config-next",
    "eslint-config-prettier",
    "eslint-plugin-tailwindcss",
    "lint-staged",
    "tailwindcss"
  ]
}
